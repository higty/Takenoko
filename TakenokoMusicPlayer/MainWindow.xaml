<Window x:Class="TakenokoMusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TakenokoMusicPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="FolderPathTextbox" Margin="10,10,90,0" 
                 Text="D:\Data\Music\" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Height="20"/>
        <Button x:Name="ReloadButton" Content="Reload" Margin="0,10,10,0" 
                VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>

        <Grid Margin="10,40,10,79">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0" Name="FileListBox" Margin="0,0,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FileName}"></TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid Background="#000000" Grid.Column="1">
                <MediaElement Name="Player" Margin="10,10,10,10" />
            </Grid>
        </Grid>
        <Button x:Name="PlayButton" Content="Play" FontSize="32" HorizontalAlignment="Left" 
                Margin="10,0,0,10" Width="120" Height="55" VerticalAlignment="Bottom"/>
        <Button x:Name="PauseButton" Content="Pause" FontSize="32" HorizontalAlignment="Left" 
                Margin="140,0,0,10" Width="120" Height="55" VerticalAlignment="Bottom"/>
        <CheckBox x:Name="IsContinueCheckBox" Content="連続再生" HorizontalAlignment="Left" 
                  Margin="287,0,0,25" Height="15" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
